.module.scroll-detection {
	

	
	.detection-demo {
		position: relative;
		width: calc(100% - 80px);
    max-width: 600px;
		height: 60vh;
		margin: 0 auto;
		
		border-top: 1px solid grey;
		border-bottom: 1px solid grey;
		
		.box-large,
		.box-small {
			position: absolute;
			display: flex;
			justify-content:center;
			align-content:center;
			flex-direction:column;
			text-align: center;
			
			.description {
				font-size: 12px;
			}
		}
		
		
		.box-large {
			top: calc(50% - 150px);
			left: calc(50% - 200px);
			width: 300px;
			height: 300px;
			background-color: #B2E1E9;
			transition: background 800ms, color 400ms;
			
			&.active {
				background-color: #023A51;
				color: #fff;
			}
		}
		.box-small {
			top: calc(50% - 100px);
			left: 50%;
			width: 200px;
			height: 200px;
			background-color: #E5EFEF;
			transition: background 800ms, color 400ms;
			
			&.active {
				background-color: #006167;
				color: #fff;
			}
		}
		
		.middle-line {
			position: fixed;
			top: 50vh;
			height: 0;
			left:0;
			width:100%;
			
			border-top: 1px dashed #D8D8D8;
			transition: opacity 400ms;
			opacity: 0;
			
			&.active {
				opacity: 1;
			}
		}
		
		
	}
}
