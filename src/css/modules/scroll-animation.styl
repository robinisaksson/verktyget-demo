.module.scroll-animation {
	
	.animation-demo {
		position: relative;
		width: calc(100% - 80px);
    max-width: 600px;
		height: 60vh;
		margin: 0 auto;
		
		border-top: 1px solid grey;
		border-bottom: 1px solid grey;
		
		.box {
			position: absolute;
			width: 60px;
			height: 60px;
		}
		.box-1 {
			top: 0;
			left: 0;
			background-color: #006167;
		}
		.box-2 {
			bottom: 0;
			left: 0;
			background-color: #023A51;
		}
		.box-3 {
			top: calc(100% - 30px);
			right:0;
			background-color: #B2E1E9;
		}
		.box-4 {
			top: 0;
			right:0;
			background-color: #023A51;
		}
		.box-5 {
			top: calc(50% - 30px);
			left: calc(50% - 30px);
			background-color: #E5EFEF;
		}
		
		.middle-line {
			position: fixed;
			top: 50vh;
			height: 0;
			left:0;
			width:100%;
			
			border-top: 1px dashed #757575;
			opacity: 0;
			
			&.active {
				opacity: 1;
			}
		}
		
	}
}
