h1 {
	SetH1Font();
}

h2 {
	SetH2Font();
}
p {
	SetBodyFont();
  
  strong {
    font-weight: 500;
  }
  
  a {
    font-weight: 500;
    color:inherit;
    text-decoration:none;
    
    &:hover {
      text-decoration:underline;
    }
    &:active,
    &:focus {
      outline: none;
      // -moz-outline-style: none;
    }
  }
  
  &.tiny {
    font-size: 8px;
  }
}
p+p {
  padding-bottom: 1em;
}

