
SetH1Font() {
  font-family: 'Home Text', sans-serif;
  font-weight: 400;
  line-height: 1.5em;
  color: $colors.text;
  font-size: 28px;

	+sm() {
		font-size: 36px;
	}
  +md() {
		font-size: 42px;
	}
}
SetH2Font() {
  font-size: 28px;
	+sm() {
		font-size: 36px;
	}
  +md() {
		font-size: 42px;
	}
}

SetBodyFont() {
  font-family: sans-serif;
  font-weight: 400;
  line-height: 1.5em;
  color: $colors.text;
  font-size: 14px;

  +md() {
		font-size: 18px;
	}
}

h1 {
	SetH1Font();
}
h2 {
	SetH2Font();
}
h3 {
  font-family: sans-serif;
  font-size: 14px;
}
p {
	SetBodyFont();
}

