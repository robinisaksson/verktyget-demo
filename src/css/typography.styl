}

SetBoldBodyFont() {
  SetBodyFont();
  font-weight: 500;
}

h1 {
	SetH1Font();
}
h2 {
	SetH2Font();
}
p {
	SetBodyFont();
}

h1.responsive-font {
	FluidFontStart(320, 639, 16, 16);
	FluidFontStep(640, 1024, 16, 48);
	FluidFontStep(1025, 1600, 48, 100);
	FluidFontEndless(1601, 100, .2);
}


