body {
	background: lightGrey;
}
h1 {
	text-align: center;
  margin-top: 80px;
	padding-bottom: 1em;
}

.scene {

	.hero {
		width: 100%;
		height: 100vh;
		background:grey;

		.media {
			width:100%;
			height:300px;

			video {
				width:100%;
				height:auto;
			}
		}
	}

	.grid-container {

		background: #fff;
		max-width: 1200px;
		margin: 0 auto;
		padding: 30px;
		font-size:0;

		.grid-module {
			display: inline-block;
			vertical-align: top;

			position: relative;
			box-sizing: border-box;
			width: calc(25% - 20px);
			padding: 20px;
			margin-left: 10px;
			margin-right: 10px;
			margin-bottom: 40px;
			background-color: #F1E7CD;
			box-shadow: 2px 3px 4px rgba(0, 0, 0, 0.2);
			transition: background-color 300ms ease-out;

			&.scroll-test {
				background-color: cyan;
			}
			&.active {
				background-color: #CDEDF1;
			}

			.media {
				img {
					width: 100%;
				}
			}

			h2 {
				padding-bottom: 20px;
			}
			h3 {
				padding-bottom: 10px;
			}
			p {
				padding-bottom: 2em;
				max-width: 480px;
				width: 100%;
			}
		}
	}
}
